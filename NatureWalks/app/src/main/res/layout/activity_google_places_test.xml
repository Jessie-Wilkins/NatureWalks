<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jessie.naturewalks.CameraTest">

    <!-- Set image view -->
    <ImageView
        android:id="@+id/captured_images"
        android:layout_width="300dp"
        android:layout_height="300dp" />

    <!-- Set inner linear layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Set button for camera -->
        <Button
            android:id="@+id/start_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Camera"
            />

        <!-- Set button for saving -->
        <Button
            android:id="@+id/save_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save entry"/>


    </LinearLayout>


    <!-- Set edit text of the text entry -->
    <EditText
        android:id="@+id/text_entry"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />


</LinearLayout>
